<div local-class="content">
    <div local-class="title">Create a new Subscription</div>
    <div local-class="input">
        <div local-class="input-label">User Details</div>
        <Input @value={{this.userName}} placeholder="User's Name" type="text" />
        <Input @value={{this.password}} placeholder="Password" type="text" />
        <button type="button" {{on "click" this.createUser}}>Create</button>
    </div>
</div>